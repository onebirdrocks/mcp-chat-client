{
  "name": "mcp-chat-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:production": "NODE_ENV=production next build",
    "start": "next start",
    "start:production": "NODE_ENV=production next start -p 3000",
    "lint": "next lint",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"app/**/*.{ts,tsx,js,jsx,json,css,md}\" \"lib/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"app/**/*.{ts,tsx,js,jsx,json,css,md}\" \"lib/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:integration": "vitest run tests/integration --config tests/test-runner.config.ts",
    "test:e2e": "vitest run tests/e2e --config tests/test-runner.config.ts",
    "test:performance": "vitest run tests/performance --config tests/test-runner.config.ts",
    "test:all": "vitest run && npm run test:integration && npm run test:e2e && npm run test:performance",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "security-check": "./scripts/security-check.sh",
    "precommit": "npm run security-check && npm run lint && npm run test:run",
    "clean": "rm -rf .next out node_modules/.cache",
    "clean:all": "npm run clean && rm -rf node_modules",
    "postinstall": "npm run type-check",
    "deploy:build": "npm run clean && npm install && npm run test:all && npm run build:production",
    "deploy:docker": "docker build -t mcp-chat-ui .",
    "deploy:docker:run": "docker run -p 3000:3000 mcp-chat-ui",
    "health-check": "curl -f http://localhost:3000/api/health || exit 1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.1",
    "i18next": "^25.3.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "isomorphic-dompurify": "^2.26.0",
    "next": "^15.4.6",
    "openai": "^4.73.1",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.6.1",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^4.1.11",
    "uuid": "^11.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.19",
    "@types/crypto-js": "^4.2.2",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-config-next": "^15.4.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vitest": "^3.2.4"
  }
}
