# Environment Configuration Example
# Copy this file to .env.local and fill in your values

# Application Environment
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# Server Configuration
PORT=3000
HOSTNAME=localhost

# LLM Provider API Keys (Server-side only)
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# DeepSeek Configuration
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# OpenRouter Configuration
OPENROUTER_API_KEY=sk-or-your-openrouter-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Security Configuration
# Generate a secure random string for encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here
SESSION_SECRET=your-session-secret-key-here

# Data Storage Paths
DATA_DIR=./data
CONFIG_DIR=./config
SESSIONS_DIR=./data/sessions
SETTINGS_DIR=./data/settings

# Logging Configuration
LOG_LEVEL=info
AUDIT_ENABLED=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_CHAT_REQUESTS_PER_MINUTE=30

# MCP Server Configuration
MCP_CONFIG_PATH=./config/mcp.config.json
MCP_CONNECTION_TIMEOUT=30000
MCP_TOOL_EXECUTION_TIMEOUT=60000

# Development Settings
# Set to true to enable development features
DEV_MODE=false
DEBUG_MCP=false
DEBUG_LLM=false

# CORS Configuration (for development)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Backup Configuration
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Performance Settings
MAX_CHAT_HISTORY_LENGTH=1000
MAX_SESSION_COUNT=100
CLEANUP_INTERVAL_HOURS=6

# Feature Flags
STREAMING_ENABLED=true
TOOL_CONFIRMATION_REQUIRED=true
AUTO_TITLE_GENERATION=true
EXPORT_ENABLED=true

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,zh

# Theme Configuration
DEFAULT_THEME=system
SUPPORTED_THEMES=light,dark,system