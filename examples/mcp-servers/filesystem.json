{
  "name": "File System Operations",
  "description": "Basic file system operations including reading, writing, and listing files",
  "category": "filesystem",
  "servers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/path/to/allowed/directory"],
      "env": {
        "MCP_FILESYSTEM_READONLY": "false"
      }
    }
  },
  "setup": {
    "dependencies": [
      "@modelcontextprotocol/server-filesystem"
    ],
    "installation": "npm install -g @modelcontextprotocol/server-filesystem",
    "configuration": [
      "Replace '/path/to/allowed/directory' with the directory you want to allow access to",
      "Set MCP_FILESYSTEM_READONLY to 'true' for read-only access"
    ]
  },
  "tools": [
    {
      "name": "read_file",
      "description": "Read the contents of a file"
    },
    {
      "name": "write_file", 
      "description": "Write content to a file"
    },
    {
      "name": "list_directory",
      "description": "List files and directories"
    },
    {
      "name": "create_directory",
      "description": "Create a new directory"
    },
    {
      "name": "delete_file",
      "description": "Delete a file"
    },
    {
      "name": "move_file",
      "description": "Move or rename a file"
    }
  ],
  "security": {
    "notes": [
      "Only allows access to the specified directory and its subdirectories",
      "Set to read-only mode if you don't need write operations",
      "Be careful with the directory path - avoid system directories"
    ]
  },
  "examples": {
    "read_only": {
      "filesystem-readonly": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-filesystem", "/Users/username/Documents"],
        "env": {
          "MCP_FILESYSTEM_READONLY": "true"
        }
      }
    },
    "multiple_directories": {
      "filesystem-docs": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-filesystem", "/Users/username/Documents"]
      },
      "filesystem-projects": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-filesystem", "/Users/username/Projects"]
      }
    }
  }
}